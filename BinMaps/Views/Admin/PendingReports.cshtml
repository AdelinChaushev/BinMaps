@model IEnumerable<BinMaps.Data.Entities.Report>

<h2>Очакващи одобрение отчети</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Потребител</th>
            <th>Container</th>
            <th>Тип</th>
            <th>Описание</th>
            <th>Дата</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var report in Model)
        {
            <tr>
                <td>@report.Id</td>
                <td>@report.IdentityUser?.UserName</td>
                <td>@report.ThrashContainerId</td>
                <td>@report.ReportType?.Name</td>
                <td>@report.Description</td>
                <td>@report.ReportDate.ToString("g")</td>
                <td>
                    <form asp-action="ApproveReport" asp-controller="Reports" method="post">
                        <input type="hidden" name="id" value="@report.Id" />
                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
